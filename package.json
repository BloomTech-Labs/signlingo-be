{
  "name": "signlingo-be",
  "description": "A platform to learn American Sign Language.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "server": "nodemon index.js",
    "start": "npx knex migrate:latest && npx knex seed:run && node server.js",
    "test": "cross-env DB_ENV=testing jest --watch --verbose",
    "coverage": "jest --coverage --detectOpenHandles --forceExit || true"
