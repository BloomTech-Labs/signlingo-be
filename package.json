  "repository": {
    "type": "git",
    "url": "https://github.com/Lambda-School-Labs/signlingo-be.git"
  },
  "keywords": [
    "ASL",
    "Signlingo"
  ],
  "author": "David Isakson",
  "contributors": [
    "Seth Cox",
