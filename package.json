  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lambda-School-Labs/signlingo-be.git"
  },
  "homepage": "https://github.com/Lambda-School-Labs/signlingo-be.git",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.8",
    "knex-cleaner": "^1.3.0",
    "morgan": "^1.10.0",
    "node": "^14.2.0",
    "pg": "^8.0.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest": "^25.4.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "sqlite3": "^4.2.0"
  }
